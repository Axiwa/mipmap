<scene version="3.0.0">
    <default name="integrator" value="direct"/>
    <integrator type='$integrator'>
        <!-- <integer name="max_depth" value="6"/> -->
    </integrator>

    <sensor type="perspective" id="sensor">
		<float name="fov" value="35"/>
		<float name="near_clip" value="0.10000000149011612"/>
		<float name="far_clip" value="1000.0"/>
        <transform name="to_world">
            <lookat target="0, 2, 0" origin="0, 2, -50" up="0, 1, 0"/>
            <rotate y="1" angle="22.5"/>
        </transform>
        <sampler type="independent">
            <integer name="sample_count" value="8"/>
        </sampler>
        <film type="hdrfilm">
            <integer name="width"  value="1024"/>
            <integer name="height" value="1024"/>
            <rfilter type="gaussian"/>
            <string name="pixel_format" value="rgb"/>
        </film>
    </sensor>

    <!-- Light -->

    <emitter type="directional">
        <rgb name="irradiance" value="2"/>
        <vector name="direction" value="0, -1, -1"/>
    </emitter>

    <!-- BSDF -->
    <texture type="bitmap" id="test">
        <string name="filename" value="figures/check16.png" />
        <string name="filter_type" value="bilinear"/>
        <string name="wrap_mode" value="repeat"/>
        <!-- <string name="mipmap_filter_type" value="trilinear"/> -->
        <transform name="to_uv">
            <scale x="16.000000" y="16.000000" />
        </transform>
    </texture> 

    <bsdf type="diffuse" id="myCheckboard">
        <ref name="reflectance" id="test" />
        <!-- <rgb name="reflectance" value="0.5, 0.5, 0.5"  /> -->
    </bsdf>

    <!-- Shapes -->

    <shape type="obj" id="floor">
        <string name="filename" value="figures/meshes/Plane.obj"/>
        <ref id="myCheckboard"/>
    </shape>
</scene>
